@model Pizzeria.Models.Prodotti

@{
    ViewBag.Title = "Elimina Prodotto";
}
<style>
    .container-Delete {
        max-width: 800px;
        margin: auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #007bff;
        text-align: center;
        margin-bottom: 20px;
    }

    h3 {
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-danger-Delete {
        padding: 10px 20px;
        background-color: #dc3545;
        color: #ffffff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-secondary-Delete {
        padding: 10px 20px;
        background-color: #6c757d;
        color: #ffffff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }
</style>
<div class="container-Delete">
    <h2>@ViewBag.Title</h2>

    <h3>Sei sicuro di voler eliminare questo prodotto?</h3>

    <div>
        <h4>Prodotto:</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Nome)</dt>
            <dd>@Html.DisplayFor(model => model.Nome)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <input type="submit" value="Elimina" class="btn btn-danger btn-danger-Delete" />
            </div>
        }
    </div>

    <div>
        @Html.ActionLink("Annulla", "Index", null, new { @class = "btn btn-secondary btn-secondary-Delete" })
    </div>
</div>